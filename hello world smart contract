pragma solidity ^0.4.0;

contact HelloWorld 
{

string x;

function HelloWorld(string data)  //acts as a constructor i.e, its executed during deployment time
{                             
x = data;                         //data acts as a input parameter
}

function set(string _x)
{
x  = _x;
}

function greet() view public returns(string) 
{
return x;
}
}
